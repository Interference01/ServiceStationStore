<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>Service Store</title>
    <link rel="stylesheet" asp-href-include="~/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown mx-5">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">О компании</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Новости</a>
                            </div>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link active" asp-controller="" asp-action="">
                                Доставка
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" href="#">Оплата</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" href="#">Контакты</a>
                        </li>
                        <li class="nav-item ms-5">
                            <a class="nav-link" href="#">
                                <img src="~/287711_instagram_icon.png" style="width:60%" />
                            </a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link" href="#">
                                <img src="~/287739_facebook_icon.png" style="width:60%" />
                            </a>
                        </li>
                    </ul>
                    <button type="button" class="btn btn-outline-primary mx-auto"><img src="~/5340287_man_people_person_user_users_icon.png" style="width:30%" />Войти</button>
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-expand">
            <div class="collapse navbar-collapse d-flex justify-content-center p-3">
                <ul class="navbar-nav mx-5">
                    <li>
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <img src="~/Лого3.png" />
                        </a>
                    </li>
                    <li class="p-4 mx-5">
                        <a>
                            <h3>(<u>066) 411 49 15</u></h3>
                            <h3>(<u>095) 462 47 57</u></h3>
                        </a>
                    </li>
                    <li class="p-2 mx-3">
                        <a>
                            <p><strong>9:00 - 18:15</strong> - пн-пт</p>
                            <p><strong>9:00 - 16:00</strong> - сб</p>
                            <p>Выходной - вс</p>
                        </a>
                    </li>
                </ul>
                @await Component.InvokeAsync("CartSummary")
            </div>
        </nav>
    </div>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="collapse navbar-collapse p-2 d-flex justify-content-center">
                <ul class="navbar-nav ">
                    <li class="nav-item mx-3">
                        <a class="nav-link active" asp-controller="Product" asp-action="Index" asp-route-Category="All">
                            Все товары
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link" asp-controller="" asp-action="">Codex</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item dropdown mx-3">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Separated link</a>
                        </div>
                    </li>
                </ul>
            </div>
            <form class="d-flex me-5">
                <input class="form-control me-sm-2" type="text" placeholder="Поиск">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Поиск</button>
            </form>
        </nav>
        <div class="p-3">
            <div class="row p-4">
                <div class="col-md-2 p-5" style="width:273px; height:614px;">
                    <div id="categories">
                        @await Component.InvokeAsync("Category")
                    </div>
                </div>
                <div class="col p-5">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <div class="p-5">
        @RenderSection("Descriptionlayout", required: false)
    </div>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <p class="text-white">
                        <small>
                            © Все права защищены 2022. Политика конфиденциальности.
                        </small>
                    </p>
                </div>
            </div>
        </nav>
    </div>
</body>
</html>
